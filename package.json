{
  "name": "timechat",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "concurrently": "^7.6.0",
    "cz-customizable": "^7.0.0",
    "husky": "^8.0.3",
    "pre-commit": "^1.2.2"
  },
  "scripts": {
    "commit": "git cz",
    "start": "node index.js",
    "client": "npm run dev --prefix frontend",
    "server": "npm run start:dev --prefix backend",
    "lint:client": "npm run lint --prefix frontend",
    "lint:server": "npm run lint --prefix backend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "concurrently \"npm run lint:client\" \"npm run lint:server\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DaniilKimlb/TimeChat.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DaniilKimlb/TimeChat/issues"
  },
  "pre-commit": {
    "run": [
      "lint"
    ]
  },
  "homepage": "https://github.com/DaniilKimlb/TimeChat#readme",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "config/git/commitizen.js"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g './config/git/commitlint.js'",
      "pre-commit": "npm run lint"
    }
  }
}
